scalar Date;
scalar DateTime;

type Book{
  id:ID!
  bookNo:String
  name:String
  category:String
  author:Author
  dateAdded:DateTime
}

type Author{
  id:ID!
  name:String
}

type Query {
  getAllBooks:[Book]!
  getAllAuthors:[Author]!
  getBook(id:ID!):Book
}

type Mutation{
  addBook(name:String!,category:String,id:ID!):Book
  editBook(id:ID!,name:String!):Book
  deleteBook(id:ID!):Boolean
  addAuthor(name:String!):Author
}